                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Text>
                  <Text fx:id="companyAddress" fill="WHITE" layoutX="314.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Alamat Perusahaan" textAlignment="RIGHT" wrappingWidth="272.0">

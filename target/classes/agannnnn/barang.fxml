                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <CheckBox fx:id="status" layoutX="169.0" layoutY="230.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="272.0" text="Tersedia" />
                  <Button layoutX="321.0" layoutY="278.0" mnemonicParsing="false" onAction="#simpanHandler" text="Simpan">
                     <styleClass>
                        <String fx:value="border-small" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
                  <Button layoutX="391.0" layoutY="279.0" mnemonicParsing="false" onAction="#batalHandler" text="Batal">
                     <styleClass>
                        <String fx:value="border-small" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
               </children>
            </Pane>
            <Button layoutX="24.0" layoutY="75.0" mnemonicParsing="false" onAction="#kasirBtnHandler" prefHeight="70.0" prefWidth="140.0" text="Data Kasir">

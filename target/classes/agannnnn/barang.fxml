                        <Font size="14.0" />
                     </font>
                  </Text>
                  <Text fx:id="companyContact" fill="WHITE" layoutX="314.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Kontak Perusahaan" textAlignment="RIGHT" wrappingWidth="272.0">

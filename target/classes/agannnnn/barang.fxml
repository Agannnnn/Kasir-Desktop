            </Pane>
            <Button layoutX="24.0" layoutY="155.0" mnemonicParsing="false" onAction="#pesananBtnHandler" prefHeight="70.0" prefWidth="140.0" text="Data Pesanan">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <styleClass>
                  <String fx:value="border-small" />
                  <String fx:value="btn" />
               </styleClass>
            </Button>
            <Button disable="true" layoutX="23.0" layoutY="235.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="140.0" text="Data Barang">

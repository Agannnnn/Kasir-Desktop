               <children>
                  <Label layoutX="36.0" layoutY="40.0" text="ID Barang">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="id" disable="true" layoutX="169.0" layoutY="38.0" prefHeight="27.0" prefWidth="272.0" styleClass="border-small" />
                  <Label layoutX="36.0" layoutY="77.0" text="Nama">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="name" layoutX="169.0" layoutY="75.0" prefHeight="27.0" prefWidth="272.0" styleClass="border-small" />
